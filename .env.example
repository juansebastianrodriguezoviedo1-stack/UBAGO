# UBAGO - Environment Configuration Example
# Copy this file to .env and fill in your actual values

# ==========================================
# FIREBASE CONFIGURATION
# ==========================================
EXPO_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
EXPO_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
EXPO_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
EXPO_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
EXPO_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
EXPO_PUBLIC_FIREBASE_APP_ID=your_app_id

# ==========================================
# STRIPE CONFIGURATION
# ==========================================
# Get these from: https://dashboard.stripe.com/apikeys
EXPO_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_your_publishable_key
STRIPE_SECRET_KEY=sk_live_your_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# ==========================================
# COMMISSION RATES (as decimals)
# ==========================================
# Driver: UBAGO takes 25% of each ride fare
UBAGO_DRIVER_COMMISSION=0.25

# Restaurant: UBAGO takes 30% of each order
UBAGO_RESTAURANT_COMMISSION=0.30

# Processing fee (Stripe + 2.9%)
STRIPE_PROCESSING_FEE=0.029

# ==========================================
# API CONFIGURATION
# ==========================================
EXPO_PUBLIC_API_URL=https://api.ubago.local:3000
EXPO_PUBLIC_API_TIMEOUT=30000

# ==========================================
# GOOGLE SERVICES
# ==========================================
EXPO_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key
EXPO_PUBLIC_GOOGLE_PLACES_API_KEY=your_google_places_api_key

# ==========================================
# APP CONFIGURATION
# ==========================================
EXPO_PUBLIC_APP_NAME=UBAGO
EXPO_PUBLIC_APP_VERSION=1.0.0
EXPO_PUBLIC_ENVIRONMENT=production
EXPO_PUBLIC_LOG_LEVEL=info

# ==========================================
# NOTIFICATIONS
# ==========================================
EXPO_PUBLIC_PUSH_NOTIFICATION_KEY=your_push_key

# ==========================================
# SECURITY
# ==========================================
# JWT Secret for authentication tokens
JWT_SECRET=your_super_secret_jwt_key_change_this
JWT_EXPIRY=7d

# Session configuration
SESSION_SECRET=your_session_secret_key
SESSION_TIMEOUT=86400

# ==========================================
# PAYMENT WEBHOOK
# ==========================================
# Stripe webhook events (setup in Stripe Dashboard)
STRIPE_WEBHOOK_URL=https://api.ubago.local:3000/webhooks/stripe

# ==========================================
# DATABASE (if using)
# ==========================================
# If you add a traditional database
DATABASE_URL=postgresql://user:password@localhost:5432/ubago
DATABASE_POOL_SIZE=10

# ==========================================
# RATE LIMITING
# ==========================================
# Prevent abuse
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100

# ==========================================
# ANALYTICS & MONITORING
# ==========================================
EXPO_PUBLIC_SENTRY_DSN=your_sentry_dsn
EXPO_PUBLIC_ANALYTICS_ID=your_analytics_id

# ==========================================
# NOTES
# ==========================================
# 1. Never commit .env file - only .env.example
# 2. Keep secret keys safe and rotate them regularly
# 3. Use different keys for dev/staging/production
# 4. Store secrets in environment variables, never in code
# 5. For Firebase: https://console.firebase.google.com
# 6. For Stripe: https://dashboard.stripe.com
# 7. For Google APIs: https://console.cloud.google.com
